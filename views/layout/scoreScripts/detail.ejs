                  <%- include('./tab.script.ejs') %>
                <!-- end tab kịch bản -->

                <!-- tab Xem trước -->
                  <%- include('./tab.script.preview.ejs', { STATUS_SCORE_SCRIPT, isEdit: true, scoreScript }) %>
