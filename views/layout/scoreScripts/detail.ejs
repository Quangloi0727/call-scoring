<div class="wrapper">
  <div>
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="/scoreScripts">
                  <h5>&lsaquo; Quản lý kịch bản</h5>
                </a>
              </li>
            </ol>
          </div>
        </div>

        <div class="card">

