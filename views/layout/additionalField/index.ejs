<script>
  var additionalField = JSON.parse(decodeURIComponent(`<%- encodeURIComponent(JSON.stringify(additionalField)); %>`));
</script>
<form id="form_additionalField" class="form-horizontal">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col" class="text-center">Trường thông tin</th>
        <th scope="col" class="text-center">Tên hiển thị trên Recording</th>
        <th scope="col" class="text-center">Thao tác</th>
      </tr>
    </thead>
    <tbody id="tbl_additionalField_body"></tbody>
  </table>
</form>

<!-- modal edit field -->
<div class="modal fade" id="edit_additionalField_Modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sửa tên hiển thị</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <div class="row">
              <div class="col-md-10">
                <label for="recipient-name" class="col-form-label">Tên hiển thị<span class="c-red">*</span></label>
              </div>
              <div class="col-md-2">
                <label for="recipient-name" class="col-form-label"><span class="c-red" id="countValueLength">0/20</span></label>
              </div>
            </div>
            <input type="text" class="form-control" id="additionalFieldValue" maxlength ="20">
            <label class="col-form-label"><span class="c-red" id="duplicateValue"></span></label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-primary" id="save_additionalField">Lưu</button>
      </div>
    </div>
  </div>
</div>
